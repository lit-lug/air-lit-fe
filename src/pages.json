{
  "globalStyle": {
    "backgroundColor": "@bgColor",
    "backgroundColorBottom": "@bgColorBottom",
    "backgroundColorTop": "@bgColorTop",
    "backgroundTextStyle": "@bgTxtStyle",
    "navigationBarBackgroundColor": "#0000",
    "navigationBarTextStyle": "@navTxtStyle",
    "navigationBarTitleText": "云小洛",
    "navigationStyle": "custom"
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/splash/splash",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/pl/pl",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/mine/account/account",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/mine/setting/setting",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/mine/changelog/changelog",
      "style": {
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/mine/about/about",
      "style": {
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/schedule/schedule",
      "style": {
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/schedule/detail/detail",
      "style": {
        "enablePullDownRefresh": true
      }
    }
  ],
  "tabBar": {
    "color": "@bgColor",
    "selectedColor": "@selectedColor",
    "backgroundColor": "@tabBgColor",
    "position": "bottom",
    "borderStyle": "@tabBorderStyle",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/img/index.png",
        "selectedIconPath": "static/img/index-s.png",
        "text": "时刻"
      },
      {
        "pagePath": "pages/schedule/schedule",
        "iconPath": "static/img/schedule.png",
        "selectedIconPath": "static/img/schedule-s.png",
        "text": "课表"
      },
      {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/img/mine.png",
        "selectedIconPath": "static/img/mine-s.png",
        "text": "我的"
      }
    ]
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^U(.*)": "~/components/UnoUI/U$1/U$1.vue"
    }
  }
}
